  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Launch Program",
      "command": "${input:script}",
      "env": {}
    }
  ],
  "inputs": [
    {
      "id": "script",
      "type": "pickString",
      "description": "command to run",
      "default": "npm run test -- -i ${relativeFile} --watch",
      "options": [
        "npm run build",
        "npm run start",
        "npm run test",
        "npm run test -- -i ${relativeFile} --watch"
      ]
    }
  ]
}